          // alert('#container_'+label+":" + ticker);
          $('#container_'+label).highcharts('StockChart', {
              rangeSelector : {selected : 1},
              title : {text : name},
              yAxis: param_yaxis,
              series: [data_price[ticker], data_volume[ticker]]
          });
        }
  });

  $(function () {
