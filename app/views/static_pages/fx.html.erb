          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-md-offset-1 col-lg-offset-1">
              <br>
              <% if @usdjpy && @eurjpy %>
                <%= "為替(#{@usdjpy.datetrade})" %>
