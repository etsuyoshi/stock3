  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-11 col-lg-11">
      <div id="newssidebarcontents">
        <% today = Time.now %>
        <% @feed_news.each do |feed| %>
          <% feed_time = Time.at(feed.feed_id.to_i) %>
          <div class="newssidebaritem">
            <div class="newsSideBarItemTime">
              <% if feed_time.strftime('%Y').to_i == today.year.to_i &&
                    feed_time.strftime('%m').to_i == today.month.to_i &&
                    feed_time.strftime('%d').to_i == today.day.to_i %>
                <% # 本日の日付なら %>
                <%= feed_time.strftime('%H:%M') %>

              <% else %>
                <%= feed_time.strftime('%m/%d').to_s %>

                <%= feed_time.strftime('%R').to_s %>

              <% end %>

            </div>
            <%= link_to feed.title , feed %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
